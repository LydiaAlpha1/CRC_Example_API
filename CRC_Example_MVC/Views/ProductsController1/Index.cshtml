@model IEnumerable<CRC_Example_MVC.Models.Product>

<h2>Product List</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>

        <tbdoy>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                </tr>
            }

        </tbdoy>

    </table>



</div>
